rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGRAS TEMPORÁRIAS PARA TESTES - LIBERA ESCRITA NA COLEÇÃO perguntas
    match /perguntas/{document} {
      allow read, write: if true;
    }
    
    // Para outras coleções, mantém restrito
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

